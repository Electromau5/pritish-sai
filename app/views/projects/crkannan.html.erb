				<%= image_tag('felixcalis/js.png') %>
			</div>
			<div class="col-md-2 col-sm-12 col-lg-3 toolbox">
				<%= image_tag('felixcalis/rails.jpg') %>
			</div>
				<div class="col-md-2 col-sm-12 col-lg-3 toolbox">
				<%= image_tag('felixcalis/ps.png') %>
			</div>
		</div>
	</div>
